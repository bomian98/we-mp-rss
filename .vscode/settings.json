{
    // 终端编码设置
    
    // 自动检测文件编码
    "files.autoGuessEncoding": true,
    
    // 设置默认行尾符
    "files.eol": "\n",
    
    // 启用中文语言包
    "extensions.autoCheckUpdates": true,
    
    // 设置界面字体（可选）
    "codingcopilot.autoRun": true,
    
    // Python相关配置（wemprss 环境）
    "python.defaultInterpreterPath": "C:/Users/wang/anaconda3/envs/wemprss/python.exe",
    "python.terminal.activateEnvironment": false,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.typeCheckingMode": "basic",

    // 终端默认使用 PowerShell，启动时自动激活 conda wemprss 环境
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.profiles.windows": {
        "PowerShell": {
            "source": "PowerShell",
            "args": [
                "-NoExit",
                "-Command",
                "& 'C:\\Users\\wang\\anaconda3\\shell\\condabin\\conda-hook.ps1'; conda activate wemprss"
            ]
        }
    }
}